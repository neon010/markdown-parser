{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,  // Generates `.d.ts` type declaration files
    "declarationDir": "dist/types",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

  